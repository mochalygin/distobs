<form action="/settings/nodeUrl" method="post" class="form-group">
    <div class="form-group">
        <div class="row">        
            <div class="col-md-12">
                <label>My Node url:</label>
            </div>
            <div class="col-md-10">
                <input name="nodeUrl" value="{{ nodeUrl.value }}" type="text" class="form-control" placeholder="Node URL">
            </div>
            <div class="col-md-2">
                <button type="submit" class="btn btn-default">Save</button>
            </div>
        </div>
    </div>
</form>        